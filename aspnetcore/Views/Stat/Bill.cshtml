
@{
    ViewData["Title"] = "Bill";
}
@section header{
    <link href="~/lib/datepicker/datepicker3.css" rel="stylesheet" />
}
<section class="content-header">
    <h1>
        支出统计
    </h1>
</section>
<section class="content">
    <div class="box">
        <div class="box-body">
            <div class="col-md-2 col-md-offset-5">
                <div class="input-group">
                    <input type="text" class="form-control" id="datepicker" />
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
            </div>
            <div id="main" style="width: 100%;height:600px;"></div>
        </div>
    </div>
</section>
<script src="~/lib/datepicker/bootstrap-datepicker.js"></script>
<script src="~/lib/datepicker/locales/bootstrap-datepicker.zh-CN.js"></script>
<script src="~/js/app.js"></script>
<script src="~/lib/echarts/echarts.js"></script>
<script src="~/lib/Vue/vue.js"></script>
<script>
    var myChart = echarts.init(document.getElementById('main'));
    $(function () {
        var theMonth = new Date().Format("yyyy-MM");
        $('#datepicker').val(theMonth).datepicker({
            language: "zh-CN",
            format: "yyyy-mm",
            minViewMode: 1,
            clearBtn: true,
            autoclose: true,
            todayBtn: false,
            todayHighlight: true
        }).on("changeDate", function (e) {
            getStat($("#datepicker").val());
        });

        getStat(theMonth);
    })

    function getStat(month) {
        ApiClient.Get('/Api/Bill/DailyStat', {
            month: month.replace('-', '')
        }, function (e) {
            console.log(JSON.stringify(e));
            if (e.status == 1) {
                var xdata = new Array;
                var vdata = new Array;
                $.each(e.data, function (k, v) {
                    xdata.push(k.substr(6));
                    vdata.push(v);
                })

                genChart(xdata, vdata);
            } else
                alert(e.msg);
        })
    }

    function genChart(xData, vData) {
        var option = {
            title: {
                text: '每日支出',
            },
            tooltip: {
                trigger: 'axis',
                axisPointer: {
                    type: 'cross'
                }
            },
            xAxis: {
                type: 'category',
                data: xData
            },
            yAxis: {
                type: 'value'
            },
            series: [{
                data: vData,
                type: 'line'
            }]
        };
        myChart.setOption(option);
    }
</script>
